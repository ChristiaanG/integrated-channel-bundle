<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="integrated_channel.connector.adaptor.registry.class">Integrated\Common\Channel\Connector\Adaptor\Registry</parameter>
        <parameter key="integrated_channel.connector.adaptor.registry_builder.class">Integrated\Common\Channel\Connector\Adaptor\RegistryBuilder</parameter>

    </parameters>

    <services>

        <service id="integrated_channel.connector.adaptor.registry_builder" class="%integrated_channel.connector.adaptor.registry_builder.class%" />

        <service id="integrated_channel.connector.adaptor.registry"
                 class="%integrated_channel.connector.adaptor.registry.class%"
                 factory-service="integrated_channel.connector.adaptor.registry_builder"
                 factory-method="getRegistry" />

        <service id="integrated_channel.connector.registry" alias="integrated_channel.connector.adaptor.registry" />

    </services>

</container>