<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="integrated_channel.social.login" class="Integrated\Bundle\ChannelBundle\Social\Login">
            <argument type="service" id="app.twitter_oauth" />
            <argument type="service" id="app.facebook_oauth" />
        </service>

        <service id="integrated_channel.social.callback" class="Integrated\Bundle\ChannelBundle\Social\Callback">
            <argument type="service" id="app.twitter_oauth" />
            <argument type="service" id="app.facebook_oauth" />
            <argument type="service" id="integrated_channel.config.manager" />
        </service>

    </services>

</container>